  #set $i = 1
  #for $item in $org_movement
    <tr>
    #if $item.STR == ''
        <td> $i</td>
        #set $i = $i + 1
        <td>$item.wareskind.NAME</td>
        <td>$item.wareskind.CODE</td>
        <td>$item.IMPNAME</td>
        <td>$item.IMPINN</td>
        <td>$item.IMPKPP</td>
        <td>$item.movement.REST_BEG</td>
        <td>$item.movement.PRODUCTION_INC</td>
        <td>$item.movement.WHOLESALE_INC</td>
        <td>$item.movement.IMPORT_INC</td>
