        <td>$item.TOTAL_INC_ALL</td>
        <td>$item.SALE_OUT</td>
        #set $a = $item.OTHER_OUT + $item.MOVING_OUT
        <td>$a</td>
        <td>$item.SUPLRET_OUT</td>
        <td>$item.TOTAL_OUT</td>
        <td>$item.REST_END</td>
