        <td>$item.movement.SALE_OUT</td>
        <td>$item.movement.OTHER_OUT</td>
        <td>$item.movement.SUPLRET_OUT</td>
        <td>$item.movement.TOTAL_OUT</td>
        <td>$item.movement.REST_END</td>

    #else
        <td colspan="6">$item.STR</td>
        <td>$item.REST_BEG</td>
        <td>$item.PRODUCTION_INC</td>
